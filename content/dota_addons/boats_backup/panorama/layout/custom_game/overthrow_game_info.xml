<root>

	<styles>
		<include src="file://{resources}/styles/custom_game/overthrow_game_info.css" />
	</styles>
	<Panel class="BattleshipsGameInfo">
		
		<Panel id="Title">
			<Label id="TitleName" text="#addon_game_name" />
		</Panel>
		<Label id="ObjectiveHeader" class="Header" html="true" text="#bs_Objectives" /> 
		<Label id="HowToWin" html="true" text="#bs_HowToWin" />
		<Panel id="Bases" class="InfoRow">
			<Image id="NorthCastle" src="file://{images}/custom_game/game_info/bad_base.png" />
			<Panel id="ShipDocks" class="DockPanel" >
				<Image id="TopDock" class="Docks" src="file://{images}/custom_game/game_info/dock_left.png" />
				<Image id="BottomDock" class="Docks" src="file://{images}/custom_game/game_info/Dock_right.png" />
			</Panel>
			<Image id="SouthCastle" src="file://{images}/custom_game/game_info/good_base.png" />
		</Panel>
		
		<Label id="WeaponsHeader" class="Header" html="true" text="#bs_Weapons" /> 
		<Panel id="WeaponsPanel" class="InfoRow">
			<Image id="WeaponsChart" src="file://{images}/custom_game/game_info/weapon_layout.png"/>
			<Label id="HowToWeapons" html="true" text="#bs_HowToWeapons" />
		</Panel>

		<Label id="ShipsHeader" class="Header" html="true" text="#bs_Ships" />
		<Panel id="ShipsPanel" class="InfoRow">
			<Label id="HowToShips" html="true" text="#bs_HowToShips" />
			<Image id="ShipsChart" src="file://{images}/custom_game/game_info/ships.png" />
		</Panel>
		

		<Label id="ThankYouNote" class="TipText" html="true" text="#bs_Thanks" />
	</Panel>
</root> 